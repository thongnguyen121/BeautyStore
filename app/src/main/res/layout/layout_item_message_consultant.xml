<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@drawable/bg_consultant_messages"
    android:padding="10dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tvMessageConsultantCustomerName"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Quynh Anh"/>
    <TextView
        android:id="@+id/tvMessageConsultantDateReceived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2023/11/15 11:11"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Nội dung: "/>
        <TextView
            android:id="@+id/tvMessageConsultantMessageContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng thái: "/>
        <TextView
            android:id="@+id/tvMessageConsultantReceivedStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/ivConsultantGoMessenger"
        android:layout_gravity="end"
        android:src="@drawable/messengerblack"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
</LinearLayout>