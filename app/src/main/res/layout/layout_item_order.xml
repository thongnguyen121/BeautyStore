<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp">
    <TextView
        android:id="@+id/tvOrderDetailProductName"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="tttttttttttttttttttttttttttttttttttttttttttttttttttttttt"
        />
    <TextView
        android:id="@+id/tvOrderDetailProductQty"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="1"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tvOrderDetailProductPrice"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="100.000d"
        android:gravity="end|center"
        />
</LinearLayout>